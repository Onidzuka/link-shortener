<div class="pt-32">
  <div class="w-full max-w-sm mx-auto">
    <div class="bg-teal-lightest border-t-4 border-teal rounded-b text-teal-darkest px-4 py-3 shadow-md mb-10" role="alert">
      <div class="flex">
        <div>
          <p class="font-bold">Views count: <%= shortened_url.views_count %></p>
        </div>
      </div>
    </div>

    <% if shortened_url.expires_at %>
      <div class="mb-4">
        <p class="expires-at">Your link expiration date - <%= shortened_url.expires_at.strftime("%d-%m-%Y") %></p>
      </div>
    <% end %>

    <%= form_for shortened_url, html: {class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4'} do |f| %>
      <div class="mb-4">
        <%= f.text_field :expires_at, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline', placeholder: '' %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit 'Expire', class: 'bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>